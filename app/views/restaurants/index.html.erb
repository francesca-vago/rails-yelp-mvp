<div class="container">
  <h1>All Restaurants</h1>
  <ul>
    <% @restaurants.each do |restaurant|%>
      <li>
        <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
        <p><%= restaurant.address %> | <%= restaurant.phone_number %> | <%= restaurant.category %></p>
        </li>
    <% end %>
  </ul>
  <div class="btn">
    <%= link_to "Create new restaurant", new_restaurant_path %>
  </div>
</div>
